<style name="AppBaseTheme.ExpandedMenu">
  <!-- Menu/item attributes -->
  <item name="android:itemTextAppearance">?android:attr/textAppearanceLarge</item>
  <item name="android:listViewStyle">@android:style/Widget.ListView.Menu</item>
<!--   <item name="android:windowAnimationStyle">@android:style/Animation.OptionsPanel</item> -->
  <item name="android:background">@null</item>
</style>
<style name="AppBaseTheme.IconMenu.TextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
<item name="android:textColor">@android:color/black</item>
</style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
