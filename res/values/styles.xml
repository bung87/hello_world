     <!-- Default theme for window that looks like a toast. -->
  <style name="AppBaseTheme.Toast">
      <item name="android:windowBackground">@drawable/grad</item>
      <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:backgroundDimEnabled">false</item>   
  </style>
<style name="AppBaseTheme.IconMenu">
<!--    
Menu/item attributes
 https://code.google.com/p/android/issues/detail?id=4441 -->
 
<item name="android:itemTextAppearance">@style/AppBaseTheme.IconMenu.TextAppearance</item>
<item name="android:itemBackground">@drawable/menu_selector</item>
<item name="android:itemIconDisabledAlpha">?android:attr/disabledAlpha</item>
<item name="android:horizontalDivider">@android:drawable/divider_horizontal_bright</item>
<!-- <item name="android:verticalDivider">@android:drawable/divider_vertical_bright</item> -->
<!-- <item name="android:windowAnimationStyle">@android:style/Animation.OptionsPanel</item> -->
